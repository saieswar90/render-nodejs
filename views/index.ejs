<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Dashboard</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to external CSS -->
</head>
<body>
    <h1>Owner Dashboard</h1>
    <div id="orders-container">
        <table id="orders-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Fuel Type</th>
                    <th>Litres</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.name %></td>
                        <td><%= order.address %></td>
                        <td><%= order.fuelType %></td>
                        <td><%= order.litres %></td>
                        <td class="<%= order.status === 'Delivered' ? 'delivered' : 'pending' %>">
                            <%= order.status %>
                        </td>
                        <td>
                            <% if (order.status !== 'Delivered') { %>
                                <form action="/update-status/<%= order._id %>" method="POST">
                                    <button type="submit" class="mark-delivered-btn">Mark as Delivered</button>
                                </form>
                            <% } else { %>
                                <span class="already-delivered">Already Delivered</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
